<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/currentForecastFragment">

    <fragment
        android:id="@+id/locationEntryFragment"
        android:name="com.example.weatherapp.location.LocationEntryFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_location_entry" />

    <fragment
        android:id="@+id/currentForecastFragment"
        android:name="com.example.weatherapp.forecast.current.CurrentForecastFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_current_forecast">
        <action
            android:id="@+id/action_currentForecastFragment_to_locationEntryFragment"
            app:destination="@id/locationEntryFragment" />
        <action
            android:id="@+id/action_currentForecastFragment_to_forecastDetailsFragment"
            app:destination="@id/locationEntryFragment" />
    </fragment>

    <fragment
        android:id="@+id/forecastDetailsFragment"
        android:name="com.example.weatherapp.forecast.details.ForecastDetailsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_forecast_details">
        <argument
            android:name="iconId"
            app:argType="string" />
        <argument
            android:name="temp"
            app:argType="float" />
        <argument
            android:name="date"
            app:argType="long" />
        <argument
            android:name="description"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/wholedayForecastFragment"
        android:name="com.example.weatherapp.forecast.wholeday.WholeDayForecastFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_wholeday_forecast">
        <action
            android:id="@+id/action_wholeDayForecastFragment_to_forecastDetailsFragment"
            app:destination="@id/forecastDetailsFragment" />
        <action
            android:id="@+id/action_wholeDayForecastFragment_to_locationEntryFragment"
            app:destination="@id/locationEntryFragment" />
    </fragment>

    <fragment
        android:id="@+id/weeklyForecastFragment"
        android:name="com.example.weatherapp.forecast.weekly.WeeklyForecastFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_weekly_forecast">
        <action
            android:id="@+id/action_weeklyForecastFragment_to_forecastDetailsFragment"
            app:destination="@id/forecastDetailsFragment" />
        <action
            android:id="@+id/action_weeklyForecastFragment_to_locationEntryFragment"
            app:destination="@id/locationEntryFragment" />
    </fragment>



</navigation>